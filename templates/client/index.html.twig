{% extends 'base.html.twig' %}

{% block title %}Список клиентов{% endblock %}

{% block body %}
    <h1>Список клиентов</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Отчечтво</th>
                <th>Фамилия</th>
                <th>Возраст</th>
                <th>Телефон</th>
                <th>Имя опекуна</th>
                <th>Телефон опекуна</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.firstName }}</td>
                <td>{{ client.middleName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.age }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.guardianName }}</td>
                <td>{{ client.guardianPhone }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">Показать</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Клиенты не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_create') }}">Создать клиента</a>
{% endblock %}
