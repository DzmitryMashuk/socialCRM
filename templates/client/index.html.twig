{% extends 'base.html.twig' %}

{% block title %}Список граждан{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">Список граждан</h1>

    <table class="table table-bordered table-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Отчечтво</th>
                <th>Фамилия</th>
                <th>Возраст</th>
                <th>Телефон</th>
                <th>Имя опекуна</th>
                <th>Телефон опекуна</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.firstName }}</td>
                <td>{{ client.middleName }}</td>
                <td>{{ client.lastName }}</td>
                <td>{{ client.age }}</td>
                <td>{{ client.phone }}</td>
                <td>{{ client.guardianName }}</td>
                <td>{{ client.guardianPhone }}</td>
                <td>
                    <a href="{{ path('client_edit', {'id': client.id}) }}" class="btn btn-primary m-1">Редактировать</a>
                    <a href="{{ path('client_delete', {'id': client.id}) }}" class="btn btn-danger m-1"
                       onclick="return confirm('Вы уверены, что хотите удалить ?');">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">Граждане не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_create') }}" class="btn btn-primary">Создать гражданина</a>
{% endblock %}
