{% extends 'base.html.twig' %}

{% block title %}Работники{% endblock %}

{% block body %}
    <h1>Список работников</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Почта</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">Показать</a>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">Редактировать</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Работники не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_create') }}">Создать работника</a>
{% endblock %}
