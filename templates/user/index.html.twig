{% extends 'base.html.twig' %}

{% block title %}Работники{% endblock %}

{% block body %}
    <h1>Список работников</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Почта</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% set continue = false %}
        {% for user in users %}
            {% if currentUserId == user.id %}
                {% set continue = true %}
            {% endif %}
            {% if not continue %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">Подробнее</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">Редактировать</a>
                        <a href="{{ path('user_delete', {'id': user.id}) }}"
                           onclick="return confirm('Вы уверены, что хотите удалить ?');">Удалить</a>
                    </td>
                </tr>
            {% endif %}
            {% if continue %}
                {% set continue = false %}
            {% endif %}
        {% else %}
            <tr>
                <td colspan="5">Работники не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_create') }}">Создать работника</a>
{% endblock %}
