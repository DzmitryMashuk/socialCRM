{% extends 'base.html.twig' %}

{% block title %}Список услуг{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">Список услуг</h1>

    <table class="table table-bordered table-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Группа услуги</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for serviceCatalog in serviceCatalogs %}
            <tr>
                <td>{{ serviceCatalog.id }}</td>
                <td>{{ serviceCatalog.name }}</td>
                <td>
                    {{ serviceCatalog.serviceCatalogGroup.name }}
                    #<a href="{{ path('service_catalog_group_edit', {id: serviceCatalog.serviceCatalogGroup.id}) }}">{{ serviceCatalog.serviceCatalogGroup.id }}</a>
                </td>
                <td>
                    <a href="{{ path('service_catalog_edit', {'id': serviceCatalog.id}) }}"
                        class="btn btn-primary">Редактировать</a>
                    <a href="{{ path('service_catalog_delete', {'id': serviceCatalog.id}) }}"
                       class="btn btn-danger"
                       onclick="return confirm('Вы уверены, что хотите удалить ?');">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Услуги не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('service_catalog_create') }}" class="btn btn-primary">Создать услугу</a>
{% endblock %}
