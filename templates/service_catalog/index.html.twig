{% extends 'base.html.twig' %}

{% block title %}Список услуг{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">Список услуг</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Название</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for service_catalog in service_catalogs %}
            <tr>
                <td>{{ service_catalog.id }}</td>
                <td>{{ service_catalog.name }}</td>
                <td>
                    <a href="{{ path('service_catalog_edit', {'id': service_catalog.id}) }}"
                        class="btn btn-primary">Редактировать</a>
                    <a href="{{ path('service_catalog_delete', {'id': service_catalog.id}) }}"
                       class="btn btn-danger"
                       onclick="return confirm('Вы уверены, что хотите удалить ?');">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Услуги не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('service_catalog_create') }}" class="btn btn-primary">Создать услугу</a>
{% endblock %}
