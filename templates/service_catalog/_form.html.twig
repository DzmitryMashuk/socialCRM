<div class="container">
    <div class="row">
        <div class="col-lg-6 mb-4">
            {{ form_start(form) }}
                {{ form_widget(form) }}

                <div class="form-group my-2">
                    <label for="serviceCatalogGroupId">Группа каталога</label>
                    <select class="form-select" aria-label="Группа каталога" id="serviceCatalogGroupId"
                            name="serviceCatalogGroupId">
                        {% for serviceCatalogGroup in serviceCatalogGroups %}
                            <option value="{{ serviceCatalogGroup.id }}">{{ serviceCatalogGroup.name }}</option>
                        {% endfor %}
                    </select>
                </div>

                <button class="btn btn-success">{{ button_label|default('Сохранить') }}</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
