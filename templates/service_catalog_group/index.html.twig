{% extends 'base.html.twig' %}

{% block title %}Список групп услуг{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-4">Список групп услуг</h1>

    <table class="table table-bordered table-light">
        <thead>
            <tr>
                <th>Id</th>
                <th>Имя</th>
                <th>Услуги</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for service_catalog_group in service_catalog_groups %}
            <tr>
                <td>{{ service_catalog_group.id }}</td>
                <td>{{ service_catalog_group.name }}</td>
                <td>{{ service_catalog_group.name }}</td>
                <td>
                    <a href="{{ path('service_catalog_group_edit', {'id': service_catalog_group.id}) }}"
                       class="btn btn-primary">Редактировать</a>
                    <a href="{{ path('service_catalog_group_delete', {'id': service_catalog_group.id}) }}"
                       class="btn btn-danger"
                       onclick="return confirm('Вы уверены, что хотите удалить ?');">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Группы услуги не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('service_catalog_group_create') }}">Создать группу услуги</a>
{% endblock %}
