{% extends 'base.html.twig' %}

{% block title %}Услуги{% endblock %}

{% block body %}
    <h1>Услуги</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Работник</th>
                <th>Услуга</th>
                <th>Дата услуги</th>
                <th>Причины</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td>{{ service.id }}</td>
                <td>{{ service.user.id }}</td>
                <td>{{ service.serviceCatalog.name }}</td>
                <td>{{ service.serviceDate ? service.serviceDate|date('Y-m-d') : '' }}</td>
                <td>{{ service.note }}</td>
                <td>
                    <a href="{{ path('service_edit', {'id': service.id}) }}">Редактировать</a>
                    <a href="{{ path('service_delete', {'id': service.id}) }}"
                       onclick="return confirm('Вы уверены, что хотите удалить ?');">Удалить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Услуги не найдены!</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('service_create') }}">Создать услугу</a>
{% endblock %}
